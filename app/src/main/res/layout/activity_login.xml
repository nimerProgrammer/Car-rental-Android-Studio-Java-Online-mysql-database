    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/loginInput" android:hint="Email or Username" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/loginPass" android:hint="Password" android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/loginBtn" android:text="Login" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
